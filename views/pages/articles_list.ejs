<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %> 
</head>
<body>
  <header>
    <%- include('../partials/topbar'); %>
  </header>
  <div class="container-fluid">
    <div class="row">
      <%- include('../partials/sidebar'); %>
      <div class="col-sm-10 mt-5 mx-auto w-75 d-flex flex-column align-items-center">
        <h1 class="my-3 fs-2 text-center"><%= title %></h1>
          <% for (const article of article_list) { %>
            <div class="card">
              <div class="card-header">
                Categories: <%= article.category.join(', ') %>
              </div>
                <div class="card-body">
                  <h5 class="card-title"><%= article.title %></h5>
                  <p class="card-text"><%= article.description %></p>
                  <a href=<%= article.slug %> class="btn btn-primary">Read Article</a>
                </div>
                <div class="card-footer text-muted">
                  Created at: <%= article.createdAt %> Updated at: <%= article.updatedAt %> 
                </div>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
  <%- include('../partials/footer'); %>
</body>
</html>

