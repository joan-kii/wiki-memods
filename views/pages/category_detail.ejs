<%- include('../partials/topbar'); %>
<div class="container-fluid">
  <div class="row">
    <%- include('../partials/sidebar'); %>
    <div class="col-sm-10 mt-2 mt-md-5 mx-auto d-flex flex-column align-items-center">
      <h1 class="my-4 fs-2 text-center">
        <%= category.name %> 
      </h1>
      <h6 class="mb-1 ms-4 text-muted align-self-start">
        Description: 
      </h6>
      <p class="ms-4 align-self-start">
        <%= category.description %>
      </p>
      <div class="my-4 card w-75">
        <div class="card-header">
          Articles in <%= category.name %>
        </div>
        <ul class="list-group list-group-flush">
          <% for (const article of articles) { %>
                <li class="list-group-item">
                  <a href=<%= '/articles/' + article.slug %>><%= article.title %></a>
                </li>
              <% } %>
        </ul>
      </div>
      <div class="mt-4 mb-2 btn-group btn-group-sm w-50 d-flex align-self-center">
        <a href=<%= category.slug + '/update' %> class="btn btn-outline-primary">Update Category</a>
        <a href=<%= category.slug + '/delete' %> class="btn btn-outline-danger">Delete Category</a>
      </div>
    </div>
  </div>
</div>
<%- include('../partials/footer'); %>
