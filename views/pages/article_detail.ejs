<html lang="en">
<head>
  <%- include('../partials/head'); %> 
</head>
<body class="d-flex flex-column min-vh-100">
  <header>
    <%- include('../partials/topbar'); %>
  </header>
  <div class="container-fluid">
    <div class="row">
      <%- include('../partials/sidebar'); %>
      <div class="col-sm-10 mt-5 mx-auto w-75 d-flex flex-column align-items-center">
        <div class="card">
          <div class="mt-4 mb-2 btn-group w-50 d-flex align-self-center">
